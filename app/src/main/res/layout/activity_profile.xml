<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/card_background"
                android:elevation="36dp"/>

            <ImageView
                android:id="@+id/mainimageView"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_ukm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/Green"
                    android:text="EDIT PROFILE"
                    android:background="@drawable/button_background"/>

                <Button
                    android:id="@+id/btnEditEvent"
                    android:layout_width="170dp"
                    android:layout_marginLeft="35dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Blue"
                    android:layout_gravity="right"
                    android:background="@drawable/button_background"
                    android:text="EDIT POSTINGAN"
                    android:textAlignment="textEnd"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_account_circle"
                android:drawablePadding="10dp"
                android:text="Username"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:text="Nama"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_namalengkap"
                android:drawablePadding="10dp"
                android:text="Nama Lengkap:"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:text="Nama Lengkap"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_nim"
                android:drawablePadding="10dp"
                android:text="NIM"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txNIM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:text="NIM"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txPhone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:text="Nomor Tlipun"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_gender"
                android:drawablePadding="10dp"
                android:text="Gender"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:text="Feminazi"
                android:layout_marginTop="3dp"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/DarkRed"
                android:text="LOGOUT"
                android:layout_marginBottom="60dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_new"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_account"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>